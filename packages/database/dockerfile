FROM node:18-slim AS base
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack enable
COPY . /app

FROM base AS build
WORKDIR /app/packages/database
RUN --mount=type=cache,id=pnpm,target=/pnpm/store pnpm install

FROM base
COPY --from=build /app /app
WORKDIR /app/packages/database
CMD [ "pnpm", "run", "migrate" ]