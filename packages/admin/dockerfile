FROM node:18-slim AS base
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack enable
COPY . /app

FROM base AS build
WORKDIR /app/packages/admin
RUN --mount=type=cache,id=pnpm,target=/pnpm/store pnpm install

FROM base
COPY --from=build /app /app
WORKDIR /app/packages/admin
EXPOSE 3001
CMD [ "pnpm", "run", "dev", "--host", "0.0.0.0" ]